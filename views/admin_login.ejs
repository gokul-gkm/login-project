<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/static/login.css">
</head>
<body>
  <div class="full-screen-container">
    <div class="login-container">
      <h1 class="login-title">Admin Log in</h1>
      <% if (typeof messages !== 'undefined' && adminlogout) { %>
        <div class="msg success text-center" style="color: rgb(60, 236, 60);"><%= adminlogout %></div>
      <% } %>
      <form action="/admin/login" method="post" class="form" >
        <div class="input-group success">
          <label for="name">Name</label>
          <input type="text" name="username" id="name1" required>

          <% if (typeof messages !== 'undefined' && messages.usernameSuccess) { %>
            <span class="msg success"><%= messages.usernameSuccess %></span>
          <% } else if (typeof messages !== 'undefined' && messages.usernameError) { %>
            <span class="msg error" style="color: red;"><%= messages.usernameError %></span>
          <% } %>

        </div>

        <div class="input-group error">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required>
          <span class="msg"><%= messages.error %></span>
        </div>

        <button type="submit" class="login-button">Login</button>
      </form>
      <a class="signup-link btn btn-dark rounded-pill border-blue bg-black" href="/">login as user</a>
    </div>
  </div>

</body>
</html>